
<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

<%= form_for(@mutter, url: choose_new_or_edit) do |f| %>

<% if @mutter.errors.any? %>

<div id="error_explanation">
  
  <h2><%= @mutter.errors.count %>件のエラーがあります。</h2>
  <ul>
  <% @mutter.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>


  <%= f.label :内容 %>
  <%= f.text_field :content , class: 'form-control' %>
  <br>
  <%= f.submit "つぶやきを更新する", class: 'btn btn-info btn-block'%>
<% end %>
<%= link_to "つぶやき一覧にもどる", mutters_path %>
</div>
</div>